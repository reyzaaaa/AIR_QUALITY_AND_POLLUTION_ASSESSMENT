<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_air_quality"
        android:contentDescription="Logo Aplikasi" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIR QUALITY AND POLLUTION ASSESSMENT"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E2F97"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold" />
    <TextView
    android:id="@+id/description_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Membuat Prediksi untuk penilaian kualitas Udara berdasarkan data lingkungan."
    android:textSize="16sp"
    android:textColor="#555555"
    android:textAlignment="center"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="48dp"
    android:fontFamily="@font/montserrat_regular" />
    <Button
    android:id="@+id/btn_start_simulation"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Mulai"
    android:textSize="18sp"
    />

</LinearLayout>