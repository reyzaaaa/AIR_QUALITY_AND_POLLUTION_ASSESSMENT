<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainMenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btn_toolbar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kembali"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Utama"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/montserrat_bold" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu_about"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:textAlignment="viewStart"
        android:padding="16dp"
        app:icon="@drawable/ic_menu_about"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_regular" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu_dataset"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dataset"
        android:textAlignment="viewStart"
        android:padding="16dp"
        app:icon="@drawable/ic_menu_dataset"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_regular" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu_features"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitur"
        android:textAlignment="viewStart"
        android:padding="16dp"
        app:icon="@drawable/ic_menu_features"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_regular" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu_model"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model"
        android:textAlignment="viewStart"
        android:padding="16dp"
        app:icon="@drawable/ic_menu_model"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_regular" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu_simulation"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simulasi"
        android:textAlignment="viewStart"
        android:padding="16dp"
        app:icon="@drawable/ic_menu_simulation"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_regular" />

</LinearLayout>